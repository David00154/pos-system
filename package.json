{
	"name": "dex-pos-system",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"server:start": "cd packages/server && npm start",
		"server:dev": "cd packages/server && npm run dev",
		"web:start": "cd packages/web && npm run build && npm run preview --host",
		"web:dev": "cd packages/web && npm run dev",
		"dev": "npm-run-all --parallel server:dev web:dev",
		"start": "npm-run-all --parallel --omit=dev server:start web:start"
	},
	"dependencies": {
		"concurrently": "^7.3.0",
		"npm-run-all": "^4.1.5"
	}
}
